// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id              Int               @id @default(autoincrement())
  name            String            @unique @db.VarChar(255)
  locations       String[]
  StoragesOnItems StoragesOnItems[]
}

model StorageUnit {
  id              Int               @id @default(autoincrement())
  name            String            @unique @db.VarChar(255)
  items           String[]
  StoragesOnItems StoragesOnItems[]
}

model StoragesOnItems {
  item       Item        @relation(fields: [itemId], references: [id])
  itemId     Int
  storage    StorageUnit @relation(fields: [storageId], references: [id])
  storageId  Int
  assignedAt DateTime    @default(now())

  @@id([itemId, storageId])
}
